---
import { Picture } from "astro:assets";
import { Content, frontmatter } from "@content/sections/suurna.md";
import ContainerSection from "@components/ContainerSection.astro";

import image from "@assets/images/suurna/7UQPcTjQ.png";
---

<ContainerSection id={frontmatter.id}>
  <div class="relative">
    <Picture src={image} formats={["avif", "webp"]} alt="A description of my image." class="w-full" />
    <h2 class="absolute top-0 left-0">{frontmatter.title}</h2>
  </div>

  <div class="md mt-10">
    <Content />
  </div>

  <!-- <div class="mt-10">
    <a href={frontmatter.link}>
      <Picture src={image} formats={["avif", "webp"]} alt="A description of my image." />
    </a>
  </div> -->
</ContainerSection>

<style>
  div > p {
    @apply font-bold underline uppercase decoration-yellow-400 decoration-[0.5rem];
  }
</style>
