---
import Layout from "@layouts/MainLayout.astro";
import ContainerSection from "@components/ContainerSection.astro";
import { Content, frontmatter } from "@content/pages/laokompleks.md";
import ImageGrid from "@components/ImageGrid.astro";
import Hr from "@lib/components/Hr.astro";

const title = frontmatter.title;
const imageFiles = await Astro.glob("/src/assets/images/laokompleks/*");
---

<Layout {title}>
  <ContainerSection>
    <h1 class="mt-12 text-center text-[9vw] sm:text-6xl">{frontmatter.title}</h1>

    <Hr />

    <div class="md-text">
      <Content />
    </div>

    <Hr />

    <ImageGrid path="/laokompleks/images/" files={imageFiles} />

    <Hr />
  </ContainerSection>
</Layout>
