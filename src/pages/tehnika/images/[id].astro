---
import { getImagesStaticPathsData } from "@lib/utils";
import ImageView from "@lib/components/ImageView.astro";

export async function getStaticPaths() {
  const files = await Astro.glob("../../../assets/images/tehnika/*");
  return getImagesStaticPathsData(files);
}

interface Props {
  id?: string;
  prevId?: string;
  nextId?: string;
  image?: any;
}

const { id, image, prevId, nextId } = Astro.props;
---

<ImageView {id} {prevId} {nextId} {image} backUrl="/tehnika" />
