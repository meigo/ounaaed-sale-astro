---
import Layout from "@layouts/MainLayout.astro";
import PatternSection from "@lib/components/PatternSection.astro";
import ImageGrid from "@components/ImageGrid.astro";
import { Content, frontmatter } from "@content/pages/tehumardi-ounaaed.md";

import arrow from "@assets/svg/arrow-up.svg";

const title = frontmatter.title;
const imageFiles = await Astro.glob("../../assets/images/tehumardi/*");
---

<Layout {title}>
  <PatternSection>
    <h1 class="mt-6">{frontmatter.title}</h1>

    <div class="mt-10 md-text">
      <Content />
    </div>

    <ImageGrid path="/tehumardi-ounaaed/images/" files={imageFiles} />
  </PatternSection>
</Layout>

