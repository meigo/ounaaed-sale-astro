---
import Layout from "../../layouts/MainLayout.astro";
import pattern from "@assets/images/gfx/pattern2.png";
import BlendTest from "@lib/components/BlendTest.astro";

import MainContainer from "@lib/components/MainContainer.astro";
---

<Layout>
  <div class="isolate relative">
    <div class="absolute w-full h-screen flex bg-blend-difference">
      <div class="bg-red-500 bg-left g-left w-[5%] lg:w-[10%]"></div>
      <div class="w-[90%] lg:w-[80%] bg-yellow-300">
        <BlendTest />
      </div>
      <div class="bg-pattern bg-right w-[5%] lg:w-[10%]"></div>
    </div>

    <div class="">
      <div class="w-[90%] lg:w-[60%] mx-auto">
        <div class="text-black mt-24 h-[50vh]">HELLO</div>
      </div>
      <div class="bg-lime-400">
        <div class="w-[90%] lg:w-[60%] mx-auto">
          <div class="text-black mt-24 h-[50vh]">HELLO2</div>
        </div>
      </div>
    </div>
  </div>

  <style define:vars={{ pattern: `url("${pattern.src}")` }}>
    .bg-pattern {
      background: var(--pattern);
      background-size: 300px;
      background-position: top right;
      opacity: 0.5;
      mix-blend-mode: revert;
    }
    .bg-left {
      background-position: top right;
    }
    .bg-right {
      background-position: top left;
    }
  </style>
</Layout>
